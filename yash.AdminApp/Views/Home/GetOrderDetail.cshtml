@model CommonViewModel
@{
    ViewData["Title"] = "GetOrderDetail";
}

<h1>List orders of order id: @Model.orderId</h1>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Item Id</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.orderDetails.Count; i++)
        {
        <tr>
            <td>@Model.orderDetails[i].OrderId</td>
            <td>@Model.orderDetails[i].ItemId</td>
            <td>@Model.orderDetails[i].Quantity</td>
            <td>@Model.orderDetails[i].Price</td>
        </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index")">Go back</a>
