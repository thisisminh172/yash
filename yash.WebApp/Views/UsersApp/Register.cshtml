@model yash.ViewModels.Users.RegisterRequest

@{
    ViewData["Title"] = "Register";
}
<!--=================== Registration Template ===================-->
<main class="register-page">
    <section class="register-content paira-gap-2">
        <div class="container-fluid">
            <div class="row">
                <h1 class="page-header text-center">Create Account</h1>
                <div class="col-md-12 padding-fix-2 paira-gap-3">
                    <form asp-action="Register" asp-controller="UsersApp" method="post">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input type="text" asp-for="Email" class="form-control margin-bottom-30" placeholder="Email" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <input type="text" asp-for="FirstName" placeholder="First Name" class="form-control margin-bottom-30" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <input type="text" asp-for="LastName" class="form-control margin-bottom-30" placeholder="Last Name" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                        <input type="text" asp-for="Address" class="form-control margin-bottom-30" placeholder="Address" />
                        <span asp-validation-for="City" class="text-danger"></span>
                        <input type="text" asp-for="City" class="form-control margin-bottom-30" placeholder="City" />
                        <span asp-validation-for="State" class="text-danger"></span>
                        <input type="text" asp-for="State" class="form-control margin-bottom-30" placeholder="State" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <input type="text" asp-for="PhoneNumber" class="form-control margin-bottom-30" placeholder="PhoneNumber" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                        <input type="date" asp-for="DOB" class="form-control margin-bottom-30" placeholder="Date of birth" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input type="password" asp-for="Password" class="form-control margin-bottom-30" placeholder="Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <input type="password" asp-for="ConfirmPassword" class="form-control margin-bottom-30" placeholder="Confirm Password" />
                        <input type="submit" class="btn btn-default margin-right-10 btn-lg pull-left" value="Register">
                    </form>
                        <a href="login.html" class="margin-top-15 pull-left color-1"><span class="under">Login</span> to an existing account</a>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
