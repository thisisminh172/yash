@model UserDetailsViewModel
@{
    ViewData["Title"] = "UserDetailsViewModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="home-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 about-desc">
                <h3 style="text-align : center">Account Information</h3>
                @foreach (var item in Model.UserDetails)
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Email)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.FirstName)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.LastName)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.PhoneNumber)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Address)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.City)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.State)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.DOB)
                            </th>
                            <td>
                                @Html.FormatValue(item.DOB, "{0:yyy-MMM-ddd}")
                            </td>
                        </tr>
                    </table>
                    <h4 style="text-align : right">
                        @Html.ActionLink("Change Password", "ChangePass", new { id = item.Id })
                    </h4>
                }
            </div>
            <div class="col-md-12 about-desc">
                <h3 style="text-align:left">Order history</h3>
                @foreach (var item in Model.UserDetails)
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>
                                Code Orders
                            </th>
                            <td>
                                @Html.DisplayNameFor(model => model.UserOrders)
                            </td>
                        </tr>
                    </table> }
                </div>
        </div>
    </div>
</main>